<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ExploradorDeFarmacias" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <!-- Tema nocturno -->
    <style name="Theme.NavigationDrawer.Night" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Colores -->
        <item name="colorPrimary">@color/colorNightPrimary</item>
        <item name="colorPrimaryVariant">@color/colorNightPrimaryDark</item>
        <item name="colorOnPrimary">@color/colorTealDark</item>
        <item name="colorSecondary">@color/colorTealDark</item>
        <item name="colorSecondaryVariant">@color/colorAccent</item>
        <item name="colorOnSecondary">@color/colorNightPrimary</item>
        <!-- Estilos de la barra de acción -->
        <item name="actionBarStyle">@style/Widget.AppCompat.ActionBar.Solid</item>
        <item name="actionBarTheme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <!-- Otros atributos de estilo -->
        <!-- Personaliza tu tema aquí -->
    </style>
    <style name="Theme.NavigationDrawer.Light" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Colores -->
        <item name="colorPrimary">@color/colorPurpleLight</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/colorTealDark</item>
        <item name="colorSecondary">@color/colorTealDark</item>
        <item name="colorSecondaryVariant">@color/colorAccent</item>
        <item name="colorOnSecondary">@color/colorPurpleLight</item>
        <!-- Estilos de la barra de acción -->
        <item name="actionBarStyle">@style/Widget.AppCompat.ActionBar.Solid</item>
        <item name="actionBarTheme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <!-- Otros atributos de estilo -->
        <!-- Personaliza tu tema aquí -->
    </style>





    <style name="Theme.ExploradorDeFarmacias.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.ExploradorDeFarmacias.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.ExploradorDeFarmacias.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>