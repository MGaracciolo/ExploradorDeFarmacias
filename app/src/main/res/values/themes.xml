<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ExploradorDeFarmacias" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.ExploradorDeFarmacia" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Colores -->
        <item name="colorPrimary">@color/colorPurpleDark</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/colorTealLight</item>
        <item name="colorSecondary">@color/colorTealLight</item>
        <item name="colorSecondaryVariant">@color/colorAccent</item>
        <item name="colorOnSecondary">@color/colorPurpleDark</item>
        <!-- Otros atributos de estilo -->
        <!-- Personaliza tu tema aquí -->
    </style>
    <style name="Theme.NavigationApp.Light" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Colores -->
        <item name="colorPrimary">@color/colorPurpleLight</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/colorTealDark</item>
        <item name="colorSecondary">@color/colorTealDark</item>
        <item name="colorSecondaryVariant">@color/colorAccent</item>
        <item name="colorOnSecondary">@color/colorPurpleLight</item>
        <!-- Otros atributos de estilo -->
        <!-- Personaliza tu tema aquí -->
    </style>




    <style name="Theme.ExploradorDeFarmacias.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.ExploradorDeFarmacias.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.ExploradorDeFarmacias.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>